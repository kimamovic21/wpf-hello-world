<Window x:Class="WPFHelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFHelloWorld"
        mc:Ignorable="d"
        Title="Hello World Window" Height="400" Width="300">
    <StackPanel>
        <Viewbox Stretch="Fill">
            <Calendar 
                x:Name="myCalendar"
                DisplayMode="Month"
                SelectedDatesChanged="myCalendar_SelectedDatesChanged"
            >
                <Calendar.BlackoutDates>
                    <CalendarDateRange Start="03/01/2025" End="03/05/2025"/>
                </Calendar.BlackoutDates>
            </Calendar>
        </Viewbox>
        <TextBlock x:Name="myTextBlock"></TextBlock>
    </StackPanel>
</Window>
