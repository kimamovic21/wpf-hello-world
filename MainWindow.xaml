<Window x:Class="WPFHelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFHelloWorld"
        mc:Ignorable="d"
        Title="Hello World Window" Height="450" Width="800">
    <Grid>
        <Label 
            Margin="16, 16, 16, 0" 
            BorderThickness="1" 
            BorderBrush="Black"
        >
            <StackPanel Orientation="Horizontal">
                <Image 
                    Width="100" 
                    Height="50"
                    Source="https://thumbs.dreamstime.com/b/mail-symbol-icon-blue-gradient-rounded-corners-isolated-vector-illustration-mail-symbol-icon-blue-gradient-rounded-138998808.jpg" 
                />
                <AccessText FontSize="32" Text="Message">
                </AccessText>
            </StackPanel>
        </Label>
    </Grid>
</Window>
