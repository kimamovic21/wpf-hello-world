<Window x:Class="WPFHelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFHelloWorld"
        mc:Ignorable="d"
        Title="Hello World Window" Height="450" Width="800">
    <StackPanel Margin="10">
        <Label FontSize="25">Name: </Label>
        <TextBox FontSize="25"></TextBox>
        <Label FontSize="25">Password: </Label>
        <PasswordBox 
            FontSize="25" 
            PasswordChar="*" 
            MaxLength="15"
        >
        </PasswordBox>
    </StackPanel>
</Window>
